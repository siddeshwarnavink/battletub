type Player {
    id: ID
    name: String
    score: Float
}

type AuthenticationResponse {
    token: String,
    expiresIn: Float,
    player: Player
}

type Query {
    playerById(id: ID): Player,
    authenticate(name: String, password: String): AuthenticationResponse
}

type Mutation {
    createPlayer(name: String, password: String): Player
}